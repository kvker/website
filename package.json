{
  "name": "wubantu-website",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon ./bin/www",
    "css": "npx @tailwindcss/cli -i ./public/styles/_input.css -o ./public/styles/main.css --watch",
    "dev:todos": "concurrently \"npm run css:todos\" \"nodemon ./bin/www\"",
    "css:todos": "npx @tailwindcss/cli -i public/apps/todos/styles/input.css -o public/apps/todos/styles/output.css --watch",
    "dev:merge-pictures": "concurrently \"npm run css:merge-pictures\" \"nodemon ./bin/www\"",
    "css:merge-pictures": "npx @tailwindcss/cli -i public/apps/merge-pictures/styles/input.css -o public/apps/merge-pictures/styles/main.css --watch",
    "start": "node ./bin/www"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "ejs": "~2.6.1",
    "express": "~4.16.1",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.7.0",
    "http-errors": "~1.6.3",
    "marked": "^12.0.0",
    "morgan": "~1.9.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.7",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.1.2",
    "daisyui": "^5.0.40",
    "nodemon": "^3.1.7",
    "postcss": "^8.4.35",
    "tailwindcss": "^4.1.7"
  }
}
